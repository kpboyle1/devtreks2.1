@using DevTreks.Helpers;
@using DevTreks.Data.Helpers;
@using DevTreks.Data.AppHelpers;
@using DevTreks.Data;
@using DevTreks.Models;
@using DevTreks.Data.RuleHelpers;


@model DevTreks.Data.ContentURI

@{
    string searchurl = StylesheetHelper.GetURIPattern(Model.URIModels.LinkedViewToResourcePack.ResourcePack.ResourcePackName, Model.URIModels.LinkedViewToResourcePack.PKId.ToString(),
            Model.URINetworkPartName, LinkedViews.LINKEDVIEWS_TYPES.linkedviewresourcepack.ToString(), string.Empty);
    bool bCanDelete = AppHelper.CanDeleteNode(@Model.URINodeName,
        LinkedViews.LINKEDVIEWS_TYPES.linkedviewresourcepack.ToString(),
        Model.URIDataManager.ServerActionType, Model.URIMember);
    if (bCanDelete)
    {
            @HtmlHelperExtensions.MakeDeleteOptionsWithFieldSet(Html, searchurl, @Model.URIModels.LinkedViewToResourcePack.ResourcePack.ResourcePackName)
    }
    @Html.DivEnd()
    @Html.DivStart(string.Empty, "ui-grid-a")
    @Html.DivStart(string.Empty, "ui-block-a")
    @Html.LabelStrong("SortLabel", "Sort Label: ")
    @Html.InputTextUpdate(Model.URIDataManager.EditViewEditType, searchurl,
        Model.URIModels.LinkedViewToResourcePack.SortLabel, "SortLabel", GeneralRules.STRING, "15",
        "Input75Center", string.Empty)
    @Html.DivEnd()
    @Html.DivStart(string.Empty, "ui-block-b")
    @Html.DivEnd()
    @Html.DivEnd()    
    @HtmlHelperExtensions.MakeTextArea(Html, searchurl, Model.URIModels.LinkedViewToResourcePack.ResourcePack.ResourcePackDesc, "ResourcePackDesc",
                    "Description", GeneralHelpers.VIEW_EDIT_TYPES.part, "Text75H100PCW", "255")
}